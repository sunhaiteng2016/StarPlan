<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/tool_bar"/>
    <LinearLayout
        android:background="#F8F8F8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_type"
            android:layout_marginTop="@dimen/dp19"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="界面问题："
            android:textColor="#ff2c2c2c"
            android:textSize="15sp"
            />

        <EditText
            android:maxLines="400"
            android:id="@+id/edt_feedback"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginBottom="@dimen/dp25"
            android:gravity="top"
            android:hint="最多400个字符"
            android:padding="@dimen/dp10"
            android:textSize="16sp"
            android:background="@drawable/shape_feedback"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>

        <TextView
            android:id="@+id/tv_return"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:gravity="center"
            android:background="@drawable/shape_feedback_return"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp41"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>