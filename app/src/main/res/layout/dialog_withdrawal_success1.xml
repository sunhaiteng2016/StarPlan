<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="282dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp40"
        android:background="@drawable/shape_dialog_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp20"
        android:paddingTop="@dimen/dp24"
        android:paddingRight="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:gravity="center_horizontal"
            android:text="您已经提交申请，请耐心等待

可以通过 提现中心 > 提现记录 进行查询"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginRight="@dimen/dp14"
            android:background="@drawable/shape_round_22_red"
            android:gravity="center"
            android:text="去领取更多金币"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp20"
            android:text="继续提现"
            android:textColor="#ff999999"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="@dimen/dp100"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/dialog_gongxini" />

    <ImageView
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_below="@+id/top_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp38"
        android:background="@mipmap/dialog_close" />
</RelativeLayout>