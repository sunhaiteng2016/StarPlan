<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.WithdrawalActivity">

    <include layout="@layout/tool_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/f3f3f3" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/rl1"
        android:layout_marginTop="@dimen/dp4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="当前可提现"
                        android:textColor="@color/text_33"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/shape_circle_hui"
                        android:gravity="center"
                        android:text="\?"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/FF5151"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tv_gold_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_33"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="兑换比例：10000金币=1元"
                        android:textColor="@color/text_33"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="提现方式"
                    android:textColor="@color/text_33"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/ll_zfb"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:background="@mipmap/duibk"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/zfb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="支付宝"
                            android:textColor="@color/text_33"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/dp40"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/ll_we_chat"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/wechat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="微信支付"
                            android:textColor="@color/text_33"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_dialog_bg"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="活动专属提现"
                    android:layout_marginLeft="@dimen/dp15"
                    android:textColor="@color/text_33"
                    android:textSize="16sp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/huodong_recycler"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="@dimen/dp10"
                    android:background="#fff1f1f1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_huoyuedu"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/progressbar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp10"
                            android:max="100"
                            android:progress="20"
                            android:progressDrawable="@drawable/layer_list_progress_drawable" />

                        <TextView
                            android:id="@+id/tv_days"
                            android:layout_marginLeft="@dimen/dp16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3/5天"
                            android:textSize="14sp"
                            android:textColor="#FF333333"
                            android:layout_marginRight="@dimen/dp5"
                            android:gravity="left" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/left_img"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_below="@+id/ll_huoyuedu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/start2" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_toRightOf="@+id/left_img"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_alignTop="@+id/left_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="您已达到条件，可以立即提现"
                        android:textColor="@color/text_33"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp15"
                android:paddingBottom="@dimen/dp15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通提现"
                    android:layout_marginLeft="@dimen/dp15"
                    android:textColor="@color/text_33"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/putong_recycler"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp15"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通提现"
                    android:textColor="@color/text_33"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1.提现申请将在2个工作日审核到，请耐心等待；"
                    android:textColor="@color/text_33"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="2. 提现金额将在提现审核通过后，汇入您的支付宝或者微信  钱包中，您可以在支付宝账单或者微信钱包明细中查询；"
                    android:textColor="@color/text_33"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="3. 若您存在违规行为，提现申请将可能被驳回。"
                    android:textColor="@color/text_33"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_submit_s"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="16dp"
                android:background="@drawable/shape_round_22_red"
                android:gravity="center"
                android:text="立即提现"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>