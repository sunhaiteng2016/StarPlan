<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_bg_white"
    android:layout_width="282dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/dp20"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本次提现需要手机确认"
        android:textStyle="bold"
        android:textColor="#ff333333"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp15"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp15"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp14"
        android:text="验证码已经发送到您的手机 155****1234"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp42"
        android:layout_below="@+id/rl"
        android:background="@drawable/shape_tixian_kuang"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp18"
        android:layout_marginRight="@dimen/dp16"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp46"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/dp10"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/ffd8d8d8" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:textSize="12sp"
            android:text="获取验证码"
            android:textColor="@color/FF5151" />
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp15"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40">
        <TextView
            android:id="@+id/tv_close"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f2f2f2" />
        <TextView
            android:id="@+id/tv_right"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="确定"
            android:textColor="#42A0CA"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>